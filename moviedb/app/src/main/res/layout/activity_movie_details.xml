<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Details"
            android:textSize="24sp"
            android:textColor="#1E2A38"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Back"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1E2A38"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/viewButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="View Favourites"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1E2A38"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/addToFavoritesButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Add to Favorites"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF6F61"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/moviePosterImageView"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/movieTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1E2A38"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/movieYearTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#1E2A38"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/movieRatingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#1E2A38"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/movieReleasedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1E2A38"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/movieRuntimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1E2A38"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/movieGenreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1E2A38"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/movieDirectorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1E2A38"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/movieWriterTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1E2A38"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/movieActorsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1E2A38"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/moviePlotTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1E2A38"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/movieLanguageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1E2A38"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/movieCountryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1E2A38"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/movieAwardsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1E2A38"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/movieBoxOfficeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1E2A38"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
